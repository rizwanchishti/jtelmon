<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
   	xmlns:android="http://schemas.android.com/apk/res/android"
   	android:gravity="center_vertical|center_horizontal"
   	android:orientation="vertical" 
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="MONTE BANATO"
        android:textAppearance="?android:attr/textAppearanceMedium" >

    </TextView>

    <TextView
        android:id="@+id/textView2agentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="NUME AGENT"
        android:textAppearance="?android:attr/textAppearanceSmall" >

    </TextView>
    
    
    <Button 
        android:layout_height="wrap_content" 
        android:id="@+id/Button01SelectieRuta" 
        android:layout_width="230dp" 
        android:text="Selectie Ruta" 
        android:textStyle="bold"></Button>

	<Button
    	android:layout_height="wrap_content" 
    	android:textStyle="bold" 
    	android:text="Selectie Client" 
    	android:layout_width="230dp" 
    	android:id="@+id/Button02SelectieClient"></Button>
	
	<Button 
	    android:layout_gravity="center_horizontal" 
	    android:layout_height="wrap_content" 
	    android:textStyle="bold" 
	    android:text="Cauta Produs" 
	    android:layout_width="230dp" 
	    android:id="@+id/Button03CautaProdus"></Button>
	
	<Button 
	    android:layout_height="wrap_content" 
	    android:textStyle="bold" 
	    android:layout_width="230dp" 
	    android:id="@+id/Button04ComenziNetrimise" 
	    android:text="Comenzi Netrimise"></Button>
	
	<Button 
	    android:layout_height="wrap_content" 
	    android:text="Vizualizare Clasificari" 
	    android:textStyle="bold" 
	    android:layout_width="230dp" 
	    android:id="@+id/Button05VizualizareClasificari"></Button>

</LinearLayout>

