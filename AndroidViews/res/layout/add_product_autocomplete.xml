<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/custom_button_gray" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="Total:"
            android:textColor="@color/orange"
            android:textSize="22.0dip"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0.00"
            android:paddingRight="5.0dip"
            android:text="0.00"
            android:textColor="@color/black"
            android:textSize="22.0dip"
            android:textStyle="bold" />
    </LinearLayout>

<LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent" android:layout_weight="1">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Denumire :"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"/>
   
    <AutoCompleteTextView android:id="@+id/autocompleteProduct"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:hint="Cauta Produs"> 
        <requestFocus/> 
    </AutoCompleteTextView>

</LinearLayout>

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1">
    
    	<TableRow android:id="@+id/tableRow1" android:layout_width="wrap_content"
                  android:layout_height="wrap_content">

    	    	  <TextView
                        android:id="@+id/text1"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="ID produs"
                        android:textSize="20sp" 
                        android:textStyle="bold"/>

    	    	  <TextView
    	    	      android:id="@+id/idProduct"
    	    	      android:layout_width="match_parent"
    	    	      android:layout_height="wrap_content"
    	    	      android:background="@drawable/custom_button_green"
    	    	      android:textColor="@color/black"
    	    	      android:textSize="20.0dip"
    	    	      android:textStyle="bold" />

    	</TableRow>
    	</TableLayout>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/labelProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="33sp"
            android:text="Denumire"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewDenumireProdus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_green"
    	    android:textColor="@color/black"
    	    android:textSize="20.0dip"
            android:textStyle="bold" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/labelProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="82sp"
            android:text="Pret"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_green"
            android:textColor="@color/black"
            android:textSize="20.0dip"
            android:textStyle="bold"
            android:ems="10" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Numar Bucati:"
            android:textAppearance="?android:attr/textAppearanceMedium" 
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/numarbucati"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Discount:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/discount"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal" />

    </TableRow>

<LinearLayout
    android:id="@+id/LinearLayout02"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="20sp" >

    <Button
        android:textSize="14.0dip" 
        android:textStyle="bold" 
        android:id="@+id/ButtonAddProduct"
        android:background="@drawable/custom_button_green" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="20sp"
        android:layout_weight="3.56"
        android:text="Adauga" /> 
        
    <Button
        android:textSize="14.0dip" 
        android:textStyle="bold" 
        android:id="@+id/Button01home"
        android:background="@drawable/custom_button_red" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="20sp"
        android:layout_weight="3.56"
        android:text="Renunta" />

</LinearLayout>

</LinearLayout>
